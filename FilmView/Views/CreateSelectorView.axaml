<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:FilmView.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="FilmView.Views.CreateSelectorView"
             x:DataType="viewModels:CreateSelectorViewModel">
    <Grid ColumnDefinitions="* *" RowDefinitions="Auto *">
        <HyperlinkButton Command="{Binding Back}">Назад</HyperlinkButton>
        <Button Grid.Row="1" Margin="50" Background="Chocolate" Command="{Binding GotoFilm}" HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Center">
            <TextBlock Foreground="White" FontSize="50">Фильм</TextBlock>
        </Button>
        <Button Grid.Row="1" Background="DarkCyan" Grid.Column="1" Margin="50" Command="{Binding GotoShow}"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Center"
                HorizontalContentAlignment="Center">
            <TextBlock Foreground="White" FontSize="50">Сериал</TextBlock>
        </Button>
    </Grid>
</UserControl>